<?xml version="1.0"?>
<config>
    <global title="Modwheel">
        <!-- print debugging information?
             this could contain sensitive information, turn this
             off for live sites.
             -->
         <debug>1</debug>
         <defaultsite>modwheeltest</defaultsite>
         <templatedir>/opt/modwheel/templates/</templatedir>
     </global>
        
    <site name="modwheeltest" locale="en_EN" uniqueidfortest="SITEID0001">
        <database>
            <type>MySQL</type>
            <name>modwheeltest</name>
            <username>modwheel</username>
            <password>torskd0rsk</password>
            <host>localhost</host>
        </database>
        <templatedriver>TT</templatedriver>
        <templatedir>/opt/devel/modwheel/templates</templatedir>
        <directoryindex>index.html</directoryindex>
        <sessiondb>/opt/modwheel/db/modwheeltest-session.bdb</sessiondb>
        <render outdir="/opt/modwheel/html/modwheeltest" />
        <TT>
            <plugins>
                <plugin name="CGI"        class="Template::Plugin::CGI" />
                <plugin name="Date"        class="Template::Plugin::Date" />
                <plugin name="File"        class="Template::Plugin::File" />
                <plugin name="HTML"        class="Template::Plugin::HTML" />
                <plugin name="Image"    class="Template::Plugin::Image" />
                <plugin name="Iterator" class="Template::Plugin::Iterator" />
                <plugin name="String"    class="Template::Plugin::String" />
                <plugin name="URL"        class="Template::Plugin::URL" />
                <plugin name="Wrap"        class="Template::Plugin::Wrap" />
            </plugins>
        </TT>
    </site>
    
    <site name="modwheeltest2" locale="en_EN" uniqueidfortest="SITEID0002">
        <database>
            <type>MySQL</type>
            <name>modwheeltest</name>
            <username>modwheel</username>
            <password>torskd0rsk</password>
            <host>localhost</host>
        </database>
        <directoryindex>index.html</directoryindex>
        <templatedriver>TT</templatedriver>
        <templatedir>/opt/modwheel/templates/modwheeltest</templatedir>
        <sessiondb>/opt/modwheel/db/modwheeltest-session.bdb</sessiondb>
        <render outdir="/opt/modwheel/html/modwheeltest" />
    </site>

    <default>
        <inherit />
        <parent>1</parent>
        <active>1</active>
        <owner>100</owner>
        <groupo>100</groupo>
    </default>
</config>
